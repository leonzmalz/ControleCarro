<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/app_bar_principal" tools:context=".Principal">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="1">

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ligar"
            android:id="@+id/btnLigar"
            android:layout_weight="0.15" />

        <ImageButton
            android:layout_width="110dp"
            android:layout_height="97dp"
            android:id="@+id/btnFrente"
            android:layout_gravity="center_horizontal"
            android:src="@mipmap/ic_frente" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageButton
                android:layout_width="110dp"
                android:layout_height="97dp"
                android:id="@+id/btnEsquerda"
                android:src="@mipmap/ic_esquerda"/>

            <ImageButton
                android:layout_width="110dp"
                android:layout_height="97dp"
                android:id="@+id/btnParar"
                android:src="@mipmap/ic_parar"
                />
            <ImageButton
                android:layout_width="110dp"
                android:layout_height="97dp"
                android:id="@+id/btnDireita"
                android:src="@mipmap/ic_direita"
                />

        </LinearLayout>

        <ImageButton
            android:layout_width="110dp"
            android:layout_height="97dp"
            android:id="@+id/btnRe"
            android:layout_gravity="center_horizontal"
            android:src="@mipmap/ic_re" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Buzinar"
            android:id="@+id/btnBuzinar"
            android:layout_weight="0.15" />

        <ToggleButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="FarÃ³is"
            android:textOn="Farol Ligado"
            android:textOff="Farol Desligado"
            android:id="@+id/btnFarol"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.15" />

    </LinearLayout>
</RelativeLayout>
